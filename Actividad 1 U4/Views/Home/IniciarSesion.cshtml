@model Actividad_1_U4.Models.Usuario
@{
    Layout = "_Layout";
}

<main>
    <form method="post" action="~/Home/IniciarSesion">
        <h1 style="font-family:'Another Flight'">Iniciar sesión.</h1>
        <input type="email" asp-for="Correo" placeholder="Correo electrónico" style="margin:10px" />
        <br />
        <input type="password" placeholder="Contraseña" asp-for="Contraseña" />
        <br />
        <input type="checkbox" value="true" id="permanecer" name="persistente" style="margin:10px" />
        <label for="mantener">Permanecer conectado </label>
        <br />
        <input type="submit" style="margin:10px" />
    </form>
    <a href="~/Home/Registrar">
        <br />
        ¡Únete a nosotros!
    </a>
    @Html.ValidationSummary()
    <a href="~/Home/RecuperarContra">
        <br />
        ¿Olvidaste la contraseña?
    </a>
</main>

