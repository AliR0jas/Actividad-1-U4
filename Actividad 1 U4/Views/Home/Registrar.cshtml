@model Actividad_1_U4.Models.Usuario
@{ Layout = "_Layout"; }

<main>
    <h1>¡Regístrate en nuestra plataforma!</h1>
    <form method="post" action="~/Home/Registrar">
        <h1 style="font-family:'Another Flight'">Ingrese los siguientes datos:</h1>
        <input type="text" asp-for="NombreUsuario" placeholder="Nombre de usuario" style="margin:10px" />
        <br />
        <input type="text" placeholder="Correo electrónico" asp-for="Correo" />
        <br />
        <input type="password" placeholder="Contraseña" name="contraseña" asp-for="Contraseña" />
        <br />
        <input type="password" placeholder="Confirme la contraseña" name="contraseña2" asp-for="Contraseña" />
        <br />
        <input type="submit" style="margin:10px" value="Registrarse ahora." />
        @Html.ValidationSummary()
    </form>
</main>
